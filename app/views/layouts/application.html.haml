!!! 5
%html{ :lang => "en-US", "xml:lang" => "en-US", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ 'http-equiv' => "content-type", :content => "text/html; charset=utf-8" }
    %meta{ :name => "Author", :content => "Truthcomm" }
    %meta{ :name => "viewport", :content => "width=1024" }
    %title= 'Truthcomm - ' + @title ||= "Thanks for Visiting!"
    %meta{ :name => "Keywords", :content => "Truthcomm" }
    %meta{ :name => "Description", :content => "Truthcomm"}
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    = javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.4.3/jquery.min.js"
    = javascript_include_tag 'rails', 'application'
    %meta{:name => 'csrf-token', :content => form_authenticity_token}
    %meta{:name => 'csrf-param', :content => 'authenticity_token'}
  %body.bp
    #header
      #inside_header
        .logo
          = link_to image_tag('logo.png'), root_path
        .menu
          %ul
            %li= link_to "Home", root_path
            %li= link_to "Carriers", carriers_path
            %li= link_to "Phone Hardware", phone_path
            %li= link_to "Energy Services", energy_path
            %li= link_to "About", about_path            
            %li= link_to "Contact", contact_path
    #wrapper
      #container
        #content
          = yield
    #footerpusher
      #footer
        .copyright
          Copyright &copy; 2011 Truthcomm. All rights reserved.

